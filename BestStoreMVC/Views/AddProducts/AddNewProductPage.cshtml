@model Product
@{

}
<div id="addNewProductModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Product Form</h2>
        <form method="post" enctype="multipart/form-data" asp-controller="AddProducts" asp-action="InsertNewProduct" id="productForm">
            
            <div class="form-group">
                <label for="name">Name</label>
                <input asp-for=Name type="text" id="name" name="name" required>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea asp-for=Description id ="description" name="description" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <input asp-for=Category type="text" id="category" name="category">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input asp-for=Price type="number" id="price" name="price" step="0.01">
            </div>
            <div class="form-group">
                <label for="imageFileName">Image File Name</label>
                <input asp-for=ImageFileName type="text" id="imageFileName" name="imageFileName">
            </div>
            <div class="form-group">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

